<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#2039C2"
                android:text="Hotel Booking App"
                android:fontFamily="casual"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@drawable/background" />

        </LinearLayout>


        <ImageView

            android:layout_marginRight="10dp"
            android:layout_width="235dp"
            android:layout_height="163dp"
            android:layout_gravity="center"
            android:src="@drawable/single_bed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#6C3524"
            android:text="Room, 1 King Bed"
            android:layout_gravity="center"
            android:fontFamily="casual"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#6C3524"
            android:text="* Free WiFi   * 300 sq ft   * Sleeps 3"
            android:layout_gravity="center"
            android:fontFamily="casual"/>

        <Button
            android:id="@+id/room_book"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#6E7ABE"
            android:padding="10dp"
            android:text="Book"
            android:textColor="#00020D"

            android:textSize="30dp"
            android:textStyle="normal" />


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="235dp"
            android:layout_height="163dp"
            android:layout_gravity="center"
            android:src="@drawable/studio_suite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#6C3524"
            android:text="Studio Suite, 1 King Bed"
            android:layout_gravity="center"
            android:fontFamily="casual"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#6C3524"
            android:text="* Free WiFi   * 500 sq ft   * Free self parking   * Sleeps 5"
            android:layout_gravity="center"
            android:fontFamily="casual"/>

        <Button
            android:id="@+id/studio_book"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#6E7ABE"
            android:padding="10dp"
            android:text="Book"
            android:textColor="#00020D"

            android:textSize="30dp"
            android:textStyle="normal" />



    </LinearLayout>

</RelativeLayout>