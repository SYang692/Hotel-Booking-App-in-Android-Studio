<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoomInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Room Information"
        android:layout_margin="5dp"
        android:textColor="#0D29C2"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/spinnerType"
        android:entries="@array/type"
        android:background="#8BC34A"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/personName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Number of Rooms"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkIn"
        android:hint="Checkin Date"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkOut"
        android:hint="Checkout Date"/>

    <Button
        android:id="@+id/preview"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#6E7ABE"
        android:padding="10dp"
        android:text="Preview"
        android:textColor="#00020D"
        android:textSize="30dp"
        android:textStyle="normal" />

</LinearLayout>